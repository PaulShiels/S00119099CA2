@model IEnumerable<CA2.Employee>

<table id="tblCusts" class="table table-striped table-condensed table-hover" 
       style="table-layout: fixed; word-wrap: break-word">
    @* Could use white-space:nowrap to avoid line wrap*@
    <thead>
        <tr>
            <th style="width:60%">@Html.DisplayNameFor(c => c.FirstOrDefault().FirstName)</th>
            <th style="width:35%">@Html.DisplayNameFor(c => c.FirstOrDefault().LastName)</th>
            <th style="width:5%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr onclick="listOrders('@emp.FirstName');" style="cursor:pointer">
                <td>
                    @String.Format("{0:d}",emp.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => emp.FirstName)
                </td>
                <td>
                    <label class="label label-info pull-right">@emp.Orders.Count</label>
                </td>
            </tr>
        }
    </tbody>
</table>


