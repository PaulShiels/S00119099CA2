<script>    
    function btnDelete(id) {
        $('#dialog-confirm').visible;
        $("#dialog-confirm").dialog({
            resizable: false,
            height: 140,
            modal: true,
            buttons: {
                "Delete Order": function (id) {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("DeleteConfirmed")',
                data: { id: id }
                    });
                },
                Cancel: function () {
                    $(this).dialog("close");
                }
            }
        });
        
        };

        function listEmployees(id) {
            $('#tbl').on('click', 'tr', function () {
                $('#form').submit();
                
            });

            $.ajax({
                type: "POST",
                url: '@Url.Action("EmployeeDetails")',
                data: { id: id },
                success: function (data) {
                    $('#empDiv').html(data);
                }
            });
        };
    
        
    </script>